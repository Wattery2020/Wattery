// Wattery
#define sensorPower 7
#define sensorPin 8

#define PIN_LED 13
#define PIN_PHOTO_SENSOR A0

#include <SPI.h>
#include <SD.h>

// Wifi module
#include <ESP8266WiFi.h>

const char* ssid = "Wattery"; //SHebeke adi
const char* password = "AQUAHACK777"; //Shebeke parolu


// Metal detector
#include <Wire.h>
#include <LiquidCrystal_I2C.h>
LiquidCrystal_I2C lcd(0x27,16,2);
int Led = 13 ;
int sinyalpin = 3;
int valMetal ;
int buzzerpin = 10;

File myFile;

const int chipSelect = 10;

void setup() 
{
  Serial.begin(9600);
  
  pinMode(sensorPower, OUTPUT);
  pinMode(PIN_LED, OUTPUT);

  // dacik sönüydür
  digitalWrite(sensorPower, LOW);
  
  // Metal detector
  lcd.init();
  lcd.backlight();
  lcd.print("Detector");
  pinMode(buzzerpin, OUTPUT);
  pinMode (Led, OUTPUT) ;
  pinMode (siqnalpin, INPUT) ;
  digitalWrite(buzzerpin,HIGH);
  
  delay(1000);
  Serial.begin(115200);
  Serial.println();
  Serial.println();
  Serial.print("Wifi giris noqtesinin qurulmasi");

  boolean result = WiFi.softAP(ssid, password);
  if(result==true) {
  IPAddress myIP = WiFi.softAPIP();

  Serial.println("Hazirdi");
  Serial.println("");
  Serial.print("Wifi shebeke adi: ");
  Serial.println(ssid);
  Serial.print("Wifi shebeke parolu: ");
  Serial.println(password);
  Serial.print("Host IP unvan: ");
  Serial.println(myIP);
  Serial.println("");
  
  else {
    Serial.println("Xeta bash verdi yeniden cehd edin");
  }
  
  // Report
  while (!Serial) {
    ;
  }
  
  Serial.print("Initializing SD card...");

  if (!SD.begin()) {
    Serial.println("initialization failed!");
    return;
  }
  Serial.println("initialization done.");

  // open the file. note that only one file can be open at a time,
  // so you have to close this one before opening another.
  myFile = SD.open("report.txt", FILE_WRITE);

  // if the file opened okay, write to it:
  if (myFile) {
    Serial.print("Writing to report.txt...");
    myFile.println(dateTime.Now+"-"+valWater+"-"+valLed+"-"+valInfo+"-"+valMetal);
    // close the file:
    myFile.close();
    Serial.println("done.");
  } else {
    // if the file didn't open, print an error:
    Serial.println("error opening report.txt");
  }

  // re-open the file for reading:
  myFile = SD.open("report.txt");
  if (myFile) {
    Serial.println("report.txt:");

    // read from the file until there's nothing else in it:
    while (myFile.available()) {
      Serial.write(myFile.read());
    }
    // close the file:
    myFile.close();
  } else {
    // if the file didn't open, print an error:
    Serial.println("error opening report.txt");
  }
}

void loop() 
{
  // melumatlar alinir ve ekrana verir
  int valInfo = readSensor();
  Serial.print("port ");
  Serial.println(valInfo);

  // Wifi
  Serial.printf("Qosulmus cihazlarin sayi = %d\n", WiFi.softAPgetStationNum());
  delay(3000);

  // alqaritim vastesi ile teyin
  if (valInfo) 
  { // cərəyan yoxdur
    Serial.println("Su normaldi");
    digitalWrite(5,LOW);
    delay(100);
  }
  else
  { // Cərəyan kecirdir
    Serial.println("Su duzludu!!!!!!!!!!");
    digitalWrite(5,HIGH);
    delay(100);
  }
  
  // Metal Detector
  valMetal = digitalRead (siqnalpin ) ;
  if (valMetal == HIGH)
  {
    lcd.setCursor(0, 1);
    lcd.print("Metal yoxdur");
    digitalWrite (Led, LOW);
    digitalWrite(buzzerpin,HIGH);
  }
  else
  {
    lcd.setCursor(0, 1);
    lcd.print("Metal var");
    beep(500);
    digitalWrite (Led, HIGH);
  }
  
  //Isiq yoxlama
  int valLed = analogRead(PIN_PHOTO_SENSOR);
  Serial.println(valLed);
  if (valLed < 300) 
  {
    digitalWrite(PIN_LED, LOW);
  } 
  else 
  {
    digitalWrite(PIN_LED, HIGH);
  }

  delay(100); // Yoxlama vaxtı
               // Hər bir saniyədən bir
  Serial.println();
}

void beep(unsigned char delayms){
  analogWrite(10, 255);
  delay(delayms);
  analogWrite(10, 150);
  delay(delayms); 
}

// su dacikinin isi
int readSensor() 
{
  digitalWrite(sensorPower, HIGH);       // dacik yanir
  delay(10);                             // cereyan verme vaxti
  int valWater = digitalRead(sensorPin); // dacikden melumatlar oxunur
  digitalWrite(sensorPower, LOW);        // dacik sonur
  return valWater;                       // son
}
